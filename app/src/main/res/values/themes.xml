<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.EVChargingService" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>

        <!-- Background and text -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item> <!-- Use dark text on light surface -->
        <item name="android:textColor">@color/onSurface</item> <!-- Default text color -->
        <item name="android:textColorPrimary">@color/onSurface</item>
        <item name="android:textColorSecondary">@color/onSurface</item>

        <!-- Status bar and error colors -->
        <item name="colorError">@color/danger</item>
        <item name="android:statusBarColor">@color/primary</item>

        <!-- Window settings -->
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Optional Light variant -->
    <style name="Theme.EVChargingService.Light" parent="Theme.EVChargingService" />

    <!-- Optional Dark variant -->
    <style name="Theme.EVChargingService.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSurface">@color/surfaceVariant</item>
        <item name="colorOnSurface">@color/surface</item> <!-- Adjust if needed -->
        <item name="colorError">@color/danger</item>
    </style>

</resources>
